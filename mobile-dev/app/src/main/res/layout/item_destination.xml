<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageViewDestination"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimage" />

        <TextView
            android:id="@+id/tvNamaObjek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gunung Kelimutu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/imgStar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_star_24" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvEstimasiHargaTiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Estimasi Harga Tiket: Rp 50.000 - Rp 100.000"
            android:textSize="16sp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Alamat: Pulau Flores, Nusa Tenggara Timur"
            android:textSize="16sp"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450 kalori"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="30 menit"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gunung Kelimutu adalah sebuah gunung berapi yang terletak di Pulau Flores. Tempat ini terkenal dengan danau tiga warna yang berubah sesuai musim."
            android:textSize="14sp"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnSiteMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Peta"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Lihat Cerita"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
